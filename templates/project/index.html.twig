{% extends 'base.html.twig' %}

{% block title %}Project index{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Project index</h1>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">project title</th>
                        <th scope="col">Description</th>
                        <th scope="col">Link Github</th>
                        <th scope="col">Link Internet</th>
                        <th scope="col">ImageHomePage</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for project in projects %}
                    <tr>
                        <td>{{ project.id }}</td>
                        <td>{{ project.name }}</td>
                        <td>{{ project.projectTitle }}</td>
                        <td>{{ project.description }}</td>
                        <td><a href="{{ project.linkGithub }}" target="_blank">{{ project.linkGithub }}</a></td>
                        <td><a href="{{ project.linkInternet }}" target="_blank">{{ project.linkInternet }}</a></td>
                        <td>{{ project.imageHomePage }}</td>
                        <td>
                            <a href="{{ path('app_project_show', {'id': project.id}) }}" class="btn btn-sm btn-info">Show</a>
                            <a href="{{ path('app_project_edit', {'id': project.id}) }}" class="btn btn-sm btn-primary">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <a href="{{ path('app_project_new') }}" class="btn btn-success">Create new</a>
    </div>
{% endblock %}